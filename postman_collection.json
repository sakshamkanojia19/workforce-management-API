{
  "info": { "name": "Workforce Mgmt API" },
  "item": [
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Visit client X\",\n  \"description\": \"Initial sales visit\",\n  \"assigneeId\": 1,\n  \"startDate\": \"2025-08-03\",\n  \"dueDate\": \"2025-08-05\"\n}"
        },
        "url": { "raw": "http://localhost:8080/tasks", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks"] }
      }
    },
    {
      "name": "Re-assign Task",
      "request": {
        "method": "PUT",
        "url": { "raw": "http://localhost:8080/tasks/1/assign/2", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks", "1", "assign", "2"] }
      }
    },
    {
      "name": "Get Tasks for Staff (date range)",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8080/tasks/staff/2?from=2025-08-03&to=2025-08-03", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks", "staff", "2"], "query": [{ "key": "from", "value": "2025-08-03" }, { "key": "to", "value": "2025-08-03" }] }
      }
    },
    {
      "name": "Change Priority",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\"priority\":\"HIGH\"}" },
        "url": { "raw": "http://localhost:8080/tasks/1/priority", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks", "1", "priority"] }
      }
    },
    {
      "name": "Add Comment",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\"author\":\"Alice\",\"text\":\"Bring brochures\"}" },
        "url": { "raw": "http://localhost:8080/tasks/1/comments", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks", "1", "comments"] }
      }
    },
    {
      "name": "Get Task Detail",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8080/tasks/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks", "1"] }
      }
    },
    {
      "name": "Get Tasks by Priority",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:8080/tasks/priority/HIGH", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["tasks", "priority", "HIGH"] }
      }
    }
  ]
}